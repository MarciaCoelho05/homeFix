generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String               @id @default(uuid())
  email              String               @unique
  password           String
  firstName          String
  lastName           String
  birthDate          DateTime
  isAdmin            Boolean              @default(false)
  isTechnician       Boolean              @default(false)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  avatarUrl          String?
  technicianCategory String[]             @default([])
  nif                String?
  feedbacks          Feedback[]
  requests           MaintenanceRequest[] @relation("ClientRequests")
  assignments        MaintenanceRequest[] @relation("TechnicianAssignments")
  messages           Message[]
}

model MaintenanceRequest {
  id           String    @id @default(uuid())
  title        String
  description  String
  category     String
  status       String    @default("pendente")
  price        Float?
  scheduledAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  ownerId      String
  technicianId String?
  mediaUrls    String[]  @default([])
  completedAt  DateTime?
  feedback     Feedback?
  owner        User      @relation("ClientRequests", fields: [ownerId], references: [id], onDelete: Cascade)
  technician   User?     @relation("TechnicianAssignments", fields: [technicianId], references: [id])
  messages     Message[]
}

model Message {
  id          String             @id @default(uuid())
  content     String
  senderId    String
  requestId   String
  createdAt   DateTime           @default(now())
  attachments String[]           @default([])
  request     MaintenanceRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  sender      User               @relation(fields: [senderId], references: [id], onDelete: Cascade)
}

model Feedback {
  id        String             @id @default(uuid())
  rating    Int
  comment   String?
  createdAt DateTime           @default(now())
  userId    String
  requestId String             @unique
  request   MaintenanceRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  user      User               @relation(fields: [userId], references: [id], onDelete: Cascade)
}
