{
  "info": {
    "name": "HomeFix API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Coleção completa para autenticação, pedidos, mensagens, upload, email e perfil."
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret@123\",\n  \"firstName\": \"Maria\",\n  \"lastName\": \"Silva\",\n  \"birthDate\": \"1990-01-01\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Secret@123\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.token) { pm.collectionVariables.set('token', json.token); }",
              "if (json.user && json.user.id) { pm.collectionVariables.set('userId', json.user.id); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Auth - Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/forgot",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "forgot"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        }
      }
    },
    {
      "name": "Auth - Reset Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/reset",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "reset"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"COLE_AQUI_O_TOKEN_DO_EMAIL\",\n  \"password\": \"NovaSenha@123\"\n}"
        }
      }
    },
    {
      "name": "Requests - Public List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/public/requests",
          "host": ["{{baseUrl}}"],
          "path": ["api", "public", "requests"]
        }
      }
    },
    {
      "name": "Requests - Public Concluídos",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/public/requests?status=concluido",
          "host": ["{{baseUrl}}"],
          "path": ["api", "public", "requests"],
          "query": [{ "key": "status", "value": "concluido" }]
        }
      }
    },
    {
      "name": "Requests - Create (POST)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/requests",
          "host": ["{{baseUrl}}"],
          "path": ["api", "requests"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Pintura da sala\",\n  \"description\": \"Pintar paredes em branco e reparar fissuras\",\n  \"category\": \"Pintura\",\n  \"price\": 150,\n  \"scheduledAt\": \"2025-01-02T10:00:00\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.id) { pm.collectionVariables.set('requestId', json.id); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Requests - Mine (GET)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/requests/mine",
          "host": ["{{baseUrl}}"],
          "path": ["api", "requests", "mine"]
        }
      }
    },
    {
      "name": "Requests - Get By ID (GET)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/requests/{{requestId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "requests", "{{requestId}}"]
        }
      }
    },
    {
      "name": "Requests - Update (PUT)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/requests/{{requestId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "requests", "{{requestId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"concluido\",\n  \"price\": 180,\n  \"scheduledAt\": \"2025-01-05T14:00:00\"\n}"
        }
      }
    },
    {
      "name": "Requests - Delete (DELETE)",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/requests/{{requestId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "requests", "{{requestId}}"]
        }
      }
    },
    {
      "name": "Requests - List All (Admin/Tech)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/requests?status=concluido",
          "host": ["{{baseUrl}}"],
          "path": ["api", "requests"],
          "query": [
            { "key": "status", "value": "concluido" }
          ]
        }
      }
    },
    {
      "name": "Messages - List by Request",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/messages/{{requestId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "messages", "{{requestId}}"]
        }
      }
    },
    {
      "name": "Messages - Send",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/messages",
          "host": ["{{baseUrl}}"],
          "path": ["api", "messages"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"requestId\": \"{{requestId}}\",\n  \"content\": \"Olá, vamos combinar a data?\"\n}"
        }
      }
    },
    {
      "name": "Upload - Imagem",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/upload",
          "host": ["{{baseUrl}}"],
          "path": ["api", "upload"]
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "" }
          ]
        }
      }
    },
    {
      "name": "Email - Teste (Mailtrap)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/email/test",
          "host": ["{{baseUrl}}"],
          "path": ["api", "email", "test"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"to\": \"inbox@mailtrap.io\",\n  \"subject\": \"Teste HomeFix\",\n  \"text\": \"Olá do HomeFix\",\n  \"html\": \"<p>Olá do <strong>HomeFix</strong>.</p>\"\n}"
        }
      }
    },
    {
      "name": "Profile - Consultar",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile"]
        }
      }
    },
    {
      "name": "Profile - Atualizar",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/profile",
          "host": ["{{baseUrl}}"],
          "path": ["api", "profile"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Maria\",\n  \"lastName\": \"Silva\",\n  \"birthDate\": \"1990-01-01\",\n  \"avatarUrl\": \"https://example.com/avatar.png\"\n}"
        }
      }
    },
    {
      "name": "Users - Promote (admin)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/{{userId}}/role",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "{{userId}}", "role"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"isAdmin\": true,\n  \"isTechnician\": true\n}"
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "requestId", "value": "" },
    { "key": "userId", "value": "" }
  ]
}
